/* components/autoInput/autoInput.wxss */
.text_wrap {
    background-color: white;
    border: 1px solid #e9e9e9;
    font-size: 30rpx;
    min-height: 108rpx;
    display: flex;
    padding: 32rpx 0;
}
.text_wrap .text_title {
    flex: 0 1 210rpx;
    text-indent: 30rpx;
}
.text_wrap .text_area {
    flex: 1;
}
.text_wrap .weui-textarea {
    width: 100%;
    font-size: 30rpx;
}